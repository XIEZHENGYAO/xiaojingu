<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_evaluation_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jayantxie.activity.EvaluationListActivity">

    <LinearLayout
        android:id="@+id/evaluation_list_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue">

        <Button
            android:id="@+id/evaluation_list_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_back"
            android:layout_marginStart="7dp"
            android:layout_gravity="start|center_vertical"/>

        <TextView
            android:id="@+id/evaluation_list_top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未显示"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:layout_gravity="start|center_vertical"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/evaluation_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/evaluation_refresh"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@mipmap/refresh"
        android:layout_marginBottom="130dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="10dp"/>

</FrameLayout>
