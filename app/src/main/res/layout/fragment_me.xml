<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <RelativeLayout
        android:id="@+id/basic_info"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFF">
        <ImageView
            android:id="@+id/head_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/head_pic"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>


        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="150dp"
            android:text="未显示"
            android:textColor="@color/dark"
            android:textSize="10pt"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="160dp"
            android:text="未显示"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/show_evadata_list"
        android:layout_marginTop="160dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/show_evadata_list"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="我的学习完成评价"
            android:textSize="8pt"
            android:gravity="center"
            android:textColor="#444444"
            android:layout_marginStart="120dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/new_friend_request"
        android:layout_below="@id/show_evadata_list"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:gravity="center">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_group_add_black_24dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="好友请求"
            android:gravity="center"
            android:textSize="8pt"
            android:textColor="#444444"
            android:layout_marginStart="120dp"
            android:layout_gravity="start|center_vertical"/>

        <TextView
            android:id="@+id/request_friend_num"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/request_bg"
            android:layout_marginEnd ="30dp"
            android:text="0"
            android:textSize="7pt"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_gravity="end|center_vertical"
            android:visibility="invisible"/>
    </FrameLayout>

    <Button
        android:id="@+id/quit_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#CC0000"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="8pt"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>


</RelativeLayout>
